<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimary">@color/persianGreen</item>
        <item name="colorPrimaryDark">@color/charcoal</item>
        <item name="colorAccent">@color/sandyBrown</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomSheetDialogWithKeyboard" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimary">@color/persianGreen</item>
        <item name="colorPrimaryDark">@color/charcoal</item>
        <item name="colorAccent">@color/sandyBrown</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysVisible</item>
    </style>

</resources>