<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screen.AppLimitFragment">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space__2_5x"
        android:layout_marginEnd="@dimen/space__2_5x"
        android:layout_marginTop="@dimen/space__2x"
        android:autofillHints=""
        android:background="@drawable/bg_round_4x"
        android:backgroundTint="@color/divider"
        tools:drawableStart="@drawable/ic_search"
        tools:drawableTint="@color/black33"
        android:drawablePadding="@dimen/space__1x"
        android:hint="@string/text_Search"
        android:inputType="text"
        android:paddingStart="@dimen/space__1_5x"
        android:paddingTop="@dimen/space__1_5x"
        android:paddingEnd="@dimen/space__1_5x"
        android:paddingBottom="@dimen/space__1_5x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_apps"
        android:layout_marginTop="@dimen/space__1_5x"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/space__2_5x"
        android:layout_marginEnd="@dimen/space__2_5x"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search"
        tools:itemCount="10"
        tools:listitem="@layout/item_app_limit" />
</androidx.constraintlayout.widget.ConstraintLayout>