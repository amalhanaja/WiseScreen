<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/screenTimeFragment"
        android:name="com.amalcodes.wisescreen.presentation.screen.ScreenTimeFragment"
        android:label="screen_time_fragment"
        tools:layout="@layout/fragment_screen_time" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.amalcodes.wisescreen.presentation.screen.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_screenTimeFragment"
            app:destination="@id/screenTimeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_dailyScreenTimeFragment"
            app:destination="@id/dailyScreenTimeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_appLimitFragment"
            app:destination="@id/appLimitFragment" />
        <action
            android:id="@+id/action_homeFragment_to_setup_pin"
            app:destination="@id/setup_pin" />
    </fragment>
    <fragment
        android:id="@+id/dailyScreenTimeFragment"
        android:name="com.amalcodes.wisescreen.presentation.screen.DailyScreenTimeFragment"
        android:label="fragment_daily_screen_time"
        tools:layout="@layout/fragment_daily_screen_time" />
    <dialog
        android:id="@+id/dayPickerDialog"
        android:name="com.amalcodes.wisescreen.presentation.component.DayPickerDialog"
        android:label="DayPickerDialog"
        tools:layout="@layout/dialog_day_picker">
        <argument
            android:name="selectedDayOfWeek"
            app:argType="integer[]" />
        <argument
            android:name="title"
            app:argType="string" />
    </dialog>
    <dialog
        android:id="@+id/timePickerDialog"
        android:name="com.amalcodes.wisescreen.presentation.component.TimePickerDialog"
        android:label="TimePickerDialog"
        tools:layout="@layout/dialog_time_picker">
        <argument
            android:name="timeInMillis"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string" />
    </dialog>
    <dialog
        android:id="@+id/appLimitDialog"
        android:name="com.amalcodes.wisescreen.presentation.component.AppLimitDialog"
        android:label="TimePickerDialog"
        tools:layout="@layout/dialog_app_limit">

        <argument
            android:name="viewEntity"
            app:argType="com.amalcodes.wisescreen.presentation.viewentity.AppLimitViewEntity" />
    </dialog>
    <action
        android:id="@+id/action_global_dayPickerDialog"
        app:destination="@id/dayPickerDialog" />

    <action
        android:id="@+id/action_global_timePickerDialog"
        app:destination="@id/timePickerDialog" />
    <fragment
        android:id="@+id/appLimitFragment"
        android:name="com.amalcodes.wisescreen.presentation.screen.AppLimitFragment"
        android:label="AppLimitFragment"
        tools:layout="@layout/fragment_app_limit">
        <action
            android:id="@+id/action_appLimitFragment_to_appLimitDialog"
            app:destination="@id/appLimitDialog" />
    </fragment>
    <navigation
        android:id="@+id/setup_pin"
        app:startDestination="@id/setupNewPinFragment">

        <fragment
            android:id="@+id/setupNewPinFragment"
            android:name="com.amalcodes.wisescreen.presentation.screen.SetupNewPinFragment"
            android:label="SetupNewPinFragment"
            tools:layout="@layout/fragment_setup_pin">
            <action
                android:id="@+id/action_setupNewPinFragment_to_verifyPinFragment"
                app:destination="@id/verifyPinFragment" />
        </fragment>
        <fragment
            android:id="@+id/verifyPinFragment"
            android:name="com.amalcodes.wisescreen.presentation.screen.VerifyPinFragment"
            android:label="VerifyPinFragment"
            tools:layout="@layout/fragment_setup_pin" />
        <action
            android:id="@+id/action_global_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/app_graph.xml" />
    </navigation>
    <dialog
        android:id="@+id/requestEnableSettingsDialog"
        android:name="com.amalcodes.wisescreen.presentation.screen.RequestEnableSettingsDialog"
        android:label="RequestPermissionFragment"
        tools:layout="@layout/dialog_request_enable_setting"
        >
        <argument
            android:name="intentAction"
            app:argType="string" />
    </dialog>
    <action
        android:id="@+id/action_global_requestEnableSettingsDialog"
        app:destination="@id/requestEnableSettingsDialog"
        app:launchSingleTop="true" />
</navigation>